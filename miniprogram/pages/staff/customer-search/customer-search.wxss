/* pages/staff/customer-search/customer-search.wxss */
.customer-search-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 40rpx;
}

/* 搜索栏 */
.search-section {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  background: #ffffff;
}

.search-bar {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 40rpx;
  padding: 0 30rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 30rpx;
}

.clear-btn {
  width: 40rpx;
  height: 40rpx;
  background: #cccccc;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 28rpx;
}

.search-btn {
  width: 140rpx;
  height: 80rpx;
  background: #3498db;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 40rpx;
  padding: 0;
}

/* 搜索结果 */
.result-section {
  padding: 20rpx;
}

.customer-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.customer-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.customer-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 600;
}

.customer-avatar.small {
  width: 60rpx;
  height: 60rpx;
  font-size: 28rpx;
}

.customer-info {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.customer-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.customer-phone {
  font-size: 26rpx;
  color: #999999;
  margin-top: 4rpx;
}

.customer-stats {
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

.customer-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.exam-btn {
  background: #2ecc71;
  color: #ffffff;
}

.recharge-btn {
  background: #f39c12;
  color: #ffffff;
}

/* 验光历史 */
.exam-history {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.customer-count {
  font-size: 26rpx;
  color: #999999;
}

.exam-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.exam-item {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.exam-date {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.exam-data {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.exam-optometrist {
  font-size: 24rpx;
  color: #999999;
}

/* 未找到 */
.not-found {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 60rpx;
}

.not-found-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.not-found-text {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 12rpx;
}

.not-found-tip {
  font-size: 26rpx;
  color: #999999;
}

/* 客户列表 */
.customer-list-section {
  padding: 20rpx;
}

.customer-list {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
}

.customer-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.customer-item:last-child {
  border-bottom: none;
}

.customer-meta {
  margin-left: auto;
}

.days-ago {
  font-size: 24rpx;
  color: #999999;
}

.days-ago.warning {
  color: #e74c3c;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 60rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}
