/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #4A90D9 0%, #357ABD 100%);
  padding: 80rpx 50rpx;
  box-sizing: border-box;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.logo-icon {
  font-size: 80rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录表单 */
.login-form {
  background: #ffffff;
  border-radius: 30rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item .label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 16rpx;
  display: block;
}

.form-item .input-field {
  width: 100%;
  height: 90rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.code-input-wrapper {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.code-input-wrapper .code-input {
  flex: 1;
}

.code-btn {
  width: 200rpx;
  height: 90rpx;
  background: #4A90D9;
  color: #ffffff;
  font-size: 26rpx;
  border-radius: 16rpx;
  padding: 0;
  line-height: 90rpx;
}

.code-btn.disabled {
  background: #cccccc;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #4A90D9 0%, #357ABD 100%);
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 500;
  border-radius: 48rpx;
  margin-top: 20rpx;
}

/* 分割线 */
.divider {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.divider .line {
  flex: 1;
  height: 1rpx;
  background: #e9ecef;
}

.divider .text {
  padding: 0 30rpx;
  color: #999999;
  font-size: 26rpx;
}

/* 微信登录按钮 */
.wechat-btn {
  width: 100%;
  height: 96rpx;
  background: #07C160;
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 500;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

/* 底部提示 */
.footer {
  position: fixed;
  bottom: 60rpx;
  left: 0;
  right: 0;
  text-align: center;
}

.footer .tips {
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
}

.footer .link {
  color: #ffffff;
  font-size: 24rpx;
}
