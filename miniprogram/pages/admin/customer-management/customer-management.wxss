/* pages/admin/customer-management/customer-management.wxss */
.customer-management-container {
  min-height: 100vh;
  background: #f5f7fa;
}

/* 搜索栏 */
.search-section {
  padding: 20rpx;
  background: #ffffff;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 40rpx;
  padding: 0 30rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 30rpx;
}

/* 统计信息 */
.stats-section {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
}

.stat-card {
  flex: 1;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #8e44ad;
}

.stat-label {
  font-size: 26rpx;
  color: #999999;
  margin-top: 8rpx;
}

/* 客户列表 */
.customer-list {
  padding: 0 20rpx 20rpx;
}

.customer-item {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 16rpx;
}

.customer-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #8e44ad 0%, #9b59b6 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 600;
}

.customer-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.customer-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.customer-phone {
  font-size: 26rpx;
  color: #999999;
  margin-top: 4rpx;
}

.customer-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.balance {
  font-size: 32rpx;
  font-weight: 600;
  color: #e74c3c;
}

.exam-count {
  font-size: 24rpx;
  color: #999999;
  margin-top: 4rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 60rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 详情弹窗 */
.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.detail-content {
  width: 90%;
  max-height: 80vh;
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  background: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999999;
}

.detail-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.info-section {
  margin-bottom: 30rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.info-value.balance {
  color: #e74c3c;
}

.exam-section {
  margin-top: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.exam-card {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
}

.exam-date {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.exam-data {
  display: flex;
  gap: 20rpx;
  font-size: 28rpx;
  color: #333333;
}
