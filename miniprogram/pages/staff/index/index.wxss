/* pages/staff/index/index.wxss */
.staff-index-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 40rpx;
}

/* 顶部信息 */
.header-section {
  background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
  padding: 60rpx 40rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.staff-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
}

.info-text {
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
}

.staff-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
}

.staff-role {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

.header-actions .action-btn {
  background: rgba(255, 255, 255, 0.2);
  padding: 16rpx 28rpx;
  border-radius: 30rpx;
}

.header-actions .action-btn text {
  color: #ffffff;
  font-size: 26rpx;
}

/* 通用卡片 */
.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.month-text,
.view-all {
  font-size: 26rpx;
  color: #999999;
}

.view-all {
  color: #4A90D9;
}

/* 统计网格 */
.stats-grid {
  display: flex;
  flex-wrap: wrap;
}

.stat-item {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 0;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #999999;
}

/* 快捷功能 */
.actions-grid {
  display: flex;
  justify-content: space-around;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.action-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.scan-icon {
  background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
}

.search-icon {
  background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
}

.exam-icon {
  background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
}

.recharge-icon {
  background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
}

.action-name {
  font-size: 26rpx;
  color: #333333;
}

/* 客户跟进 */
.customer-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.customer-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.customer-info {
  display: flex;
  flex-direction: column;
}

.customer-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.customer-phone {
  font-size: 24rpx;
  color: #999999;
  margin-top: 4rpx;
}

.last-exam {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.days-text {
  font-size: 26rpx;
  color: #666666;
}

.days-text.warning {
  color: #e74c3c;
  font-weight: 500;
}

.contact-btn {
  width: 60rpx;
  height: 60rpx;
  background: #3498db;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.empty-state {
  padding: 40rpx;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 今日业务 */
.today-stats {
  display: flex;
  justify-content: space-around;
}

.today-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.today-label {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.today-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

/* 退出登录 */
.logout-section {
  padding: 0 20rpx;
  margin-top: 30rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: #ffffff;
  color: #e74c3c;
  font-size: 30rpx;
  border-radius: 44rpx;
  border: 2rpx solid #e74c3c;
}
