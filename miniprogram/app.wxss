/**app.wxss**/
/* 全局样式 */
page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

/* 主题颜色变量 */
.primary-color {
  color: #4A90D9;
}

.primary-bg {
  background-color: #4A90D9;
}

/* 通用按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #4A90D9 0%, #357ABD 100%);
  color: #ffffff;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 217, 0.3);
}

.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-secondary {
  background: #ffffff;
  color: #4A90D9;
  border: 2rpx solid #4A90D9;
  border-radius: 50rpx;
  padding: 22rpx 58rpx;
  font-size: 32rpx;
}

/* 卡片样式 */
.card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* 标题样式 */
.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

.section-subtitle {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

/* 输入框样式 */
.input-field {
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.input-field:focus {
  border-color: #4A90D9;
  background: #ffffff;
}

/* 列表项样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 28rpx 30rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item .icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
}

.list-item .content {
  flex: 1;
}

.list-item .arrow {
  width: 24rpx;
  height: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 60rpx;
}

.empty-state .icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state .text {
  font-size: 30rpx;
  color: #999999;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
}

.loading-text {
  color: #999999;
  font-size: 28rpx;
}

/* 成功/警告/错误状态颜色 */
.text-success {
  color: #28a745;
}

.text-warning {
  color: #ffc107;
}

.text-danger {
  color: #dc3545;
}

.bg-success {
  background-color: #28a745;
}

.bg-warning {
  background-color: #ffc107;
}

.bg-danger {
  background-color: #dc3545;
}

/* Flex 布局辅助类 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-column {
  flex-direction: column;
}

/* 间距辅助类 */
.mt-20 {
  margin-top: 20rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.ml-20 {
  margin-left: 20rpx;
}

.mr-20 {
  margin-right: 20rpx;
}

.p-20 {
  padding: 20rpx;
}

.p-30 {
  padding: 30rpx;
}
