/* pages/admin/index/index.wxss */
.admin-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 40rpx;
}

/* 顶部信息 */
.header-section {
  background: linear-gradient(135deg, #8e44ad 0%, #9b59b6 100%);
  padding: 60rpx 40rpx 40rpx;
}

.admin-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
}

.info-text {
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
}

.admin-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
}

.admin-role {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

/* 通用卡片 */
.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

/* 统计网格 */
.stats-grid {
  display: flex;
  flex-wrap: wrap;
}

.stat-item {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 0;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #8e44ad;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #999999;
}

/* 待处理事项 */
.pending-alert {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff3cd;
  border-radius: 16rpx;
}

.alert-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.alert-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.alert-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #856404;
}

.alert-desc {
  font-size: 26rpx;
  color: #856404;
  margin-top: 4rpx;
}

.alert-arrow {
  font-size: 28rpx;
  color: #856404;
}

/* 菜单 */
.menu-section {
  padding: 0 20rpx;
}

.menu-group {
  background: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.menu-title {
  font-size: 26rpx;
  color: #999999;
  padding: 24rpx 30rpx 12rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8f9fa;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.menu-text {
  font-size: 30rpx;
  color: #333333;
}

.menu-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.badge {
  background: #e74c3c;
  color: #ffffff;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.menu-arrow {
  font-size: 28rpx;
  color: #cccccc;
}

/* 返回按钮 */
.back-section {
  padding: 20rpx;
  margin-top: 20rpx;
}

.back-btn {
  width: 100%;
  height: 88rpx;
  background: #ffffff;
  color: #8e44ad;
  font-size: 30rpx;
  border-radius: 44rpx;
  border: 2rpx solid #8e44ad;
}
