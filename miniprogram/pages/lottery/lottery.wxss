/* pages/lottery/lottery.wxss */
.lottery-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #ff6b6b 0%, #feca57 100%);
  padding-bottom: 40rpx;
}

/* 顶部装饰 */
.header-bg {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
}

.header-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #ffffff;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 奖品展示 */
.prizes-display {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  padding: 20rpx 30rpx;
  gap: 20rpx;
}

.prize-box {
  width: calc(33.33% - 20rpx);
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s;
}

.prize-box.highlight {
  background: #ffeaa7;
  transform: scale(1.05);
  box-shadow: 0 8rpx 30rpx rgba(255, 193, 7, 0.4);
}

.prize-box.selected {
  background: #ffeaa7;
  border: 4rpx solid #f1c40f;
}

.prize-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.prize-name {
  font-size: 24rpx;
  color: #333333;
  text-align: center;
}

/* 抽奖按钮 */
.draw-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.draw-btn {
  width: 320rpx;
  height: 320rpx;
  border-radius: 50%;
  background: linear-gradient(145deg, #ff4757 0%, #c0392b 100%);
  color: #ffffff;
  font-size: 40rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 40rpx rgba(192, 57, 43, 0.5);
  border: 10rpx solid rgba(255, 255, 255, 0.3);
}

.draw-btn.disabled {
  background: linear-gradient(145deg, #95a5a6 0%, #7f8c8d 100%);
  box-shadow: 0 8rpx 24rpx rgba(127, 140, 141, 0.4);
}

.draw-btn:active:not(.disabled) {
  transform: scale(0.95);
}

.draw-tip {
  margin-top: 24rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 中奖结果弹窗 */
.result-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.result-content {
  width: 600rpx;
  background: #ffffff;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: popIn 0.3s ease-out;
}

@keyframes popIn {
  from {
    transform: scale(0.8);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.result-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.result-title {
  font-size: 36rpx;
  color: #333333;
  margin-bottom: 30rpx;
}

.result-prize {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(135deg, #ffeaa7 0%, #fdcb6e 100%);
  padding: 40rpx 60rpx;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
}

.prize-icon-large {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.prize-name-large {
  font-size: 36rpx;
  font-weight: 600;
  color: #2d3436;
}

.result-expire {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.result-tip {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 30rpx;
}

.confirm-btn {
  width: 300rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #4A90D9 0%, #357ABD 100%);
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
}

/* 我的奖品 */
.my-prizes-section {
  background: #ffffff;
  margin: 0 30rpx;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.prize-count {
  font-size: 26rpx;
  color: #999999;
}

.prizes-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.prize-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.prize-item.used,
.prize-item.expired {
  opacity: 0.6;
}

.prize-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.prize-item-icon {
  font-size: 40rpx;
}

.prize-info {
  display: flex;
  flex-direction: column;
}

.prize-item-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.prize-expire-date {
  font-size: 24rpx;
  color: #999999;
  margin-top: 4rpx;
}

.status-tag {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.status-tag.valid {
  background: #d4edda;
  color: #155724;
}

.status-tag.used {
  background: #e2e3e5;
  color: #6c757d;
}

.status-tag.expired {
  background: #f8d7da;
  color: #721c24;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 活动规则 */
.rules-section {
  background: #ffffff;
  margin: 0 30rpx;
  border-radius: 24rpx;
  padding: 30rpx;
}

.rules-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rule-item {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}
