/* pages/profile/profile.wxss */
.profile-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 60rpx;
}

/* 头部用户信息 */
.header-section {
  background: linear-gradient(135deg, #4A90D9 0%, #357ABD 100%);
  padding: 60rpx 40rpx 80rpx;
}

.user-card {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.user-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-tip {
  font-size: 32rpx;
  color: #ffffff;
  margin-left: 24rpx;
}

.edit-btn {
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
}

.edit-btn text {
  color: #ffffff;
  font-size: 26rpx;
}

/* 用户基本信息 */
.info-section {
  margin: -40rpx 30rpx 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
}

/* 统计区域 */
.stats-section {
  display: flex;
  justify-content: space-around;
  background: #ffffff;
  margin: 0 30rpx 20rpx;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 30rpx;
}

.stat-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
}

/* 通用卡片 */
.card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 30rpx 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

/* 会员卡 */
.member-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.member-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.member-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.member-level {
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.member-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.balance-display {
  display: flex;
  flex-direction: column;
}

.balance-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.balance-value {
  font-size: 48rpx;
  font-weight: 600;
  margin-top: 8rpx;
}

.qrcode-tip {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
}

.qrcode-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.qrcode-tip text:last-child {
  font-size: 26rpx;
}

/* 充值入口 */
.recharge-section {
  padding: 24rpx 30rpx;
}

.recharge-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.recharge-left {
  display: flex;
  align-items: center;
}

.recharge-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.recharge-info {
  display: flex;
  flex-direction: column;
}

.recharge-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.recharge-desc {
  font-size: 24rpx;
  color: #999999;
  margin-top: 4rpx;
}

.recharge-arrow {
  font-size: 32rpx;
  color: #cccccc;
}

.offer-tags {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.offer-tag {
  background: #fff3e0;
  color: #e65100;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

/* 功能菜单 */
.menu-section {
  background: #ffffff;
  margin: 0 30rpx 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8f9fa;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.menu-text {
  font-size: 30rpx;
  color: #333333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #cccccc;
}

/* 店员入口 */
.staff-entry {
  text-align: center;
  padding: 30rpx;
}

.staff-text {
  font-size: 26rpx;
  color: #4A90D9;
}

/* 退出登录 */
.logout-section {
  padding: 0 30rpx;
  margin-top: 20rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: #ffffff;
  color: #ff4757;
  font-size: 30rpx;
  border-radius: 44rpx;
  border: 2rpx solid #ff4757;
}
