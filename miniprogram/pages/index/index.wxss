/* pages/index/index.wxss */
.index-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 30rpx;
}

/* 顶部用户信息 */
.header-section {
  background: linear-gradient(135deg, #4A90D9 0%, #357ABD 100%);
  padding: 60rpx 40rpx 80rpx;
  border-radius: 0 0 40rpx 40rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
}

.avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
}

.user-text {
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
}

.greeting {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 600;
}

.points {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
  margin-top: 8rpx;
}

.login-tip {
  color: #ffffff;
  font-size: 32rpx;
  margin-left: 24rpx;
}

/* 功能入口区 */
.feature-section {
  background: #ffffff;
  margin: -40rpx 30rpx 20rpx;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.feature-grid {
  display: flex;
  justify-content: space-around;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
  transition: all 0.3s;
}

.feature-item:active {
  background: #f8f9fa;
  transform: scale(0.98);
}

.feature-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.vision-icon {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.lottery-icon {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.feature-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #999999;
}

/* 会员卡区域 */
.card-section {
  margin: 0 30rpx 20rpx;
}

.member-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 30rpx;
  color: #ffffff;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
}

.card-level {
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.card-body {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.balance-info {
  display: flex;
  flex-direction: column;
}

.balance-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.balance-value {
  font-size: 48rpx;
  font-weight: 600;
  margin-top: 8rpx;
}

.card-action {
  opacity: 0.8;
}

.action-text {
  font-size: 26rpx;
}

/* 我的奖品 */
.prizes-section {
  background: #ffffff;
  margin: 0 30rpx 20rpx;
  border-radius: 24rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.more-link {
  font-size: 26rpx;
  color: #4A90D9;
}

.prizes-scroll {
  white-space: nowrap;
}

.prize-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  background: #fff8e6;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  margin-right: 20rpx;
  min-width: 160rpx;
}

.prize-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.prize-name {
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 8rpx;
}

.prize-expire {
  font-size: 22rpx;
  color: #ff6b6b;
}

/* 店铺文章 */
.articles-section {
  background: #ffffff;
  margin: 0 30rpx 20rpx;
  border-radius: 24rpx;
  padding: 30rpx;
}

.article-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.article-item {
  display: flex;
  gap: 20rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.article-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.article-cover {
  width: 180rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: #f5f7fa;
}

.article-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.article-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  line-height: 1.4;
}

.article-summary {
  font-size: 24rpx;
  color: #999999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-date {
  font-size: 22rpx;
  color: #cccccc;
}

/* 服务介绍 */
.services-section {
  background: #ffffff;
  margin: 0 30rpx 20rpx;
  border-radius: 24rpx;
  padding: 30rpx;
}

.services-grid {
  display: flex;
  justify-content: space-around;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.service-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.service-name {
  font-size: 26rpx;
  color: #666666;
}

/* 底部留白 */
.bottom-space {
  height: 30rpx;
}
