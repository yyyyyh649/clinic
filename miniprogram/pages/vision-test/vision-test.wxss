/* pages/vision-test/vision-test.wxss */
.vision-test-container {
  min-height: 100vh;
  background: #f5f7fa;
}

/* 进度条 */
.progress-section {
  background: #ffffff;
  padding: 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background: #e9ecef;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4A90D9 0%, #667eea 100%);
  border-radius: 6rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 26rpx;
  color: #666666;
  min-width: 80rpx;
  text-align: right;
}

/* 说明页面 */
.intro-section {
  padding: 40rpx;
}

.intro-card {
  background: #ffffff;
  border-radius: 30rpx;
  padding: 50rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.intro-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.intro-title {
  font-size: 44rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.intro-desc {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
  line-height: 1.8;
  margin-bottom: 40rpx;
}

.tips-list {
  width: 100%;
  margin-bottom: 40rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.tip-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #555555;
}

.eye-select {
  width: 100%;
  margin-bottom: 40rpx;
}

.select-label {
  font-size: 28rpx;
  color: #333333;
  display: block;
  margin-bottom: 16rpx;
}

.eye-buttons {
  display: flex;
  gap: 20rpx;
}

.eye-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #666666;
}

.eye-btn.active {
  background: #4A90D9;
  border-color: #4A90D9;
  color: #ffffff;
}

.start-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #4A90D9 0%, #357ABD 100%);
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 500;
  border-radius: 48rpx;
}

/* 测试区域 */
.test-section {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  min-height: calc(100vh - 72rpx);
}

.e-display {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-radius: 30rpx;
  margin-bottom: 30rpx;
  min-height: 400rpx;
}

.e-char {
  font-family: 'Arial Black', 'Helvetica Bold', sans-serif;
  font-weight: 900;
  color: #333333;
  transition: font-size 0.3s, transform 0.3s;
}

.level-info {
  text-align: center;
  margin-bottom: 30rpx;
}

.level-info text {
  font-size: 26rpx;
  color: #999999;
}

.direction-buttons {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.direction-row {
  display: flex;
  justify-content: center;
}

.direction-row.middle {
  gap: 40rpx;
}

.direction-btn {
  width: 140rpx;
  height: 140rpx;
  background: #ffffff;
  border-radius: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  margin: 10rpx;
}

.direction-btn:active {
  background: #4A90D9;
  transform: scale(0.95);
}

.direction-btn:active .arrow,
.direction-btn:active .direction-text {
  color: #ffffff;
}

.arrow {
  font-size: 48rpx;
  color: #4A90D9;
}

.direction-text {
  font-size: 24rpx;
  color: #666666;
  margin-top: 8rpx;
}

.center-info {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.remaining {
  font-size: 40rpx;
  font-weight: 600;
  color: #ff6b6b;
}

.test-actions {
  display: flex;
  justify-content: center;
}

.skip-btn {
  background: #f8f9fa;
  color: #999999;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
}

/* 结果页面 */
.result-section {
  padding: 40rpx;
}

.result-card {
  background: #ffffff;
  border-radius: 30rpx;
  padding: 50rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.result-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 40rpx;
}

.result-details {
  width: 100%;
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e9ecef;
}

.result-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 28rpx;
  color: #666666;
}

.item-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.vision-level {
  font-size: 36rpx;
  color: #4A90D9;
}

.result-tip {
  width: 100%;
  padding: 24rpx 30rpx;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
}

.result-tip.good {
  background: #d4edda;
  color: #155724;
}

.result-tip.normal {
  background: #fff3cd;
  color: #856404;
}

.result-tip.warning {
  background: #f8d7da;
  color: #721c24;
}

.result-tip .tip-text {
  font-size: 26rpx;
  line-height: 1.6;
}

.result-actions {
  display: flex;
  gap: 30rpx;
  width: 100%;
  margin-bottom: 30rpx;
}

.retry-btn {
  flex: 1;
  height: 88rpx;
  background: #f8f9fa;
  color: #666666;
  font-size: 30rpx;
  border-radius: 44rpx;
}

.save-btn {
  flex: 1;
  height: 88rpx;
  background: linear-gradient(135deg, #4A90D9 0%, #357ABD 100%);
  color: #ffffff;
  font-size: 30rpx;
  border-radius: 44rpx;
}

.disclaimer {
  text-align: center;
}

.disclaimer text {
  font-size: 22rpx;
  color: #999999;
}
