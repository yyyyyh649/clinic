<!-- pages/login/login.wxml -->
<view class="login-container">
  <!-- Logo区域 -->
  <view class="logo-section">
    <view class="logo">
      <text class="logo-icon">👓</text>
    </view>
    <text class="app-name">明亮眼镜店</text>
    <text class="app-slogan">专业验光 · 贴心服务</text>
  </view>

  <!-- 登录表单 -->
  <view class="login-form">
    <!-- 微信授权登录 -->
    <button class="wechat-btn primary" bindtap="onGetUserInfo">
      <text class="wechat-icon">💬</text>
      <text>微信授权登录</text>
    </button>
    
    <!-- 新用户手机号输入 -->
    <view class="form-item" wx:if="{{showPhoneInput}}">
      <text class="label">手机号</text>
      <input 
        class="input-field" 
        type="number" 
        maxlength="11"
        placeholder="请输入手机号完成注册" 
        bindinput="onPhoneInput"
        value="{{phone}}"
      />
      <button class="submit-phone-btn" bindtap="submitPhone">完成注册</button>
    </view>
    
    <view class="tip-text" wx:if="{{!showPhoneInput}}">
      <text>首次使用请先授权微信登录</text>
    </view>
  </view>

  <!-- 底部提示 -->
  <view class="footer">
    <text class="tips">登录即表示您同意</text>
    <text class="link" bindtap="viewAgreement">《用户服务协议》</text>
  </view>
</view>
