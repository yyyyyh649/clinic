/* pages/qrcode/qrcode.wxss */
.qrcode-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding: 30rpx;
}

/* 密码输入页面 */
.password-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.lock-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.lock-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.lock-desc {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 60rpx;
}

.password-input-area {
  position: relative;
  margin-bottom: 40rpx;
}

.password-dots {
  display: flex;
  gap: 24rpx;
}

.dot {
  width: 50rpx;
  height: 50rpx;
  border: 2rpx solid #cccccc;
  border-radius: 50%;
  background: #ffffff;
}

.dot.filled {
  background: #4A90D9;
  border-color: #4A90D9;
}

.hidden-input {
  position: absolute;
  left: -1000rpx;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.password-actions {
  margin-bottom: 30rpx;
}

.forgot-password {
  font-size: 28rpx;
  color: #4A90D9;
}

.password-tip {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff3cd;
  border-radius: 12rpx;
}

.password-tip text {
  font-size: 26rpx;
  color: #856404;
}

.set-password-link {
  color: #4A90D9;
  text-decoration: underline;
}

/* 二维码显示页面 */
.qrcode-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.qrcode-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.refresh-time {
  font-size: 24rpx;
  color: #999999;
}

.qrcode-display {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  position: relative;
  min-height: 400rpx;
}

.qrcode-canvas {
  width: 400rpx;
  height: 400rpx;
}

.qrcode-loading {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
}

.qrcode-loading text {
  font-size: 28rpx;
  color: #999999;
}

.user-info-display {
  text-align: center;
  margin-bottom: 20rpx;
}

.user-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  display: block;
  margin-bottom: 8rpx;
}

.user-balance {
  font-size: 26rpx;
  color: #4A90D9;
}

.usage-tip {
  text-align: center;
  padding: 16rpx;
  background: #e8f4fd;
  border-radius: 12rpx;
}

.usage-tip text {
  font-size: 26rpx;
  color: #357ABD;
}

/* 奖品卡片 */
.prizes-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
}

.prize-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.prize-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #fff8e6;
  border-radius: 12rpx;
}

.prize-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.prize-icon {
  font-size: 36rpx;
}

.prize-name {
  font-size: 28rpx;
  color: #333333;
}

.prize-expire {
  font-size: 24rpx;
  color: #ff6b6b;
}

/* 安全提示 */
.security-tips {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.tip-icon {
  font-size: 28rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #666666;
}

/* 锁定按钮 */
.lock-btn {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  color: #666666;
  font-size: 30rpx;
  border-radius: 44rpx;
  margin-top: 20rpx;
}
