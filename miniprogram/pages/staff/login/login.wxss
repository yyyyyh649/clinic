/* pages/staff/login/login.wxss */
.staff-login-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #2c3e50 0%, #3498db 100%);
  padding: 60rpx 40rpx;
}

/* 顶部装饰 */
.header-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  background: rgba(255, 255, 255, 0.1);
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
}

/* 标签切换 */
.tab-section {
  display: flex;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 40rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 12rpx;
  color: rgba(255, 255, 255, 0.7);
  font-size: 30rpx;
}

.tab-item.active {
  background: #ffffff;
  color: #2c3e50;
  font-weight: 500;
}

/* 表单 */
.form-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item .label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 12rpx;
  display: block;
}

.form-item .input-field {
  width: 100%;
  height: 90rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 500;
  border-radius: 48rpx;
  margin-top: 20rpx;
}

.register-tip {
  text-align: center;
  margin-top: 30rpx;
}

.register-tip text {
  font-size: 24rpx;
  color: #e67e22;
}

/* 返回链接 */
.back-link {
  text-align: center;
  margin-top: 40rpx;
}

.back-link text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}
